<div class="container">
 <h3 class="mt-3 col-2 bg-light text-center">マイページ</h3>
 <div class="row mt-3">
  <h3 class="mr-5">登録情報</h3>
  <%= link_to "編集する", edit_customers_customer_path, class: "btn btn-success" %>
 </div>
 <div class="mt-3">
  <table class="table">
   <tr>
    <td class="table-secondary col-3">氏名</td>
    <td class="col-9 border-right"><%= @customer.last_name %> <%= @customer.first_name %></td>
   </tr>
   <tr>
    <td class="table-secondary col-3">カナ</td>
    <td class="col-9 border-right"><%= @customer.last_name_kana %> <%= @customer.first__name_kana %></td>
   </tr>
   <tr>
    <td class="table-secondary col-3">郵便番号</td>
    <td class="col-9 border-right"><%= @customer.post_code %></td>
   </tr>
   <tr>
    <td class="table-secondary col-3">住所</td>
    <td class="col-9 border-right"><%= @customer.address %></td>
   </tr>
   <tr>
    <td class="table-secondary col-3">電話番号</td>
    <td class="col-9 border-right"><%= @customer.phone_number %></td>
   </tr>
   <tr>
    <td class="table-secondary col-3">メールアドレス</td>
    <td class="col-9 border-right border-bottom"><%= @customer.email %></td>
   </tr>
  </table>
 </div>
 <div class="row mt-3">
  <h3 class="mr-5 col-2">配送先</h3>
  <%= link_to "一覧を見る", customers_addresses_path, class: "btn btn-primary" %>
 </div>
 <div class="row mt-3">
  <h3 class="mr-5 col-2">注文履歴</h3>
  <%= link_to "一覧を見る", customers_orders_path, class: "btn btn-primary" %>
 </div>
</div>