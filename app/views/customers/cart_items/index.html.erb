<h2>ショッピングカート</h2>
 <table class="table">
  <tr>
    <thead>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
    </thead>
  </tr>
  <tr>
    <% @cart_items.each do |cart_item| %>
    <tbody>
      <td><%= cart_item.sweets.name %></td>
      <td><%= (cart_item.sweets.price * 1.1).floor %></td>
      <td><%= cart_item.quantity %> </td>
      <td><%= (cart_item.sweets.price * 1.1).floor * cart_item.quantity %></td>
      <td></td>
    <% end %>
    </tbody>
  </tr>
  
</table>

<table>
  <tr>
    <th>合計金額</th>
    <th></th>
  </tr>
</table>


<h2><%= "合計：#{@total}円" %></h2>