<div class="container">
  <div class="row mt-3">
   <h2>商品一覧</h2>
   <h3>(全<%= @sweets.count %>件)</h3>
  </div>
  
   <div class="d-flex flex-wrap justify-content-center">
   <% @sweets.each do |sweets| %>
    <div class="mr-4">
     <%= link_to customers_sweet_path(sweets.id) do %>
      <% if sweets.image.attached? %>
       <%= image_tag sweets.image, size: "200x150" %>
      <% else %>
       <%= image_tag 'no_image', size: "200x150" %>
      <% end %>
     <% end %>
     <p><%= sweets.name %></p>
     <P>¥<%= sweets.add_tax_price.to_s(:delimited) %></P>
    </div>
   <% end %>
  </div>
   <%= paginate @sweets %>
</div>