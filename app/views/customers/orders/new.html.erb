<h4>注文情報入力</h4>
<%= form_with model: @order, url: confirm_customers_orders_path, local: true do |f| %>

<h4><strong>支払い方法</strong></h4>
  <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:credit] %>

  <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:bank]%>
<h4><strong>お届け先</strong></h4>
  <%= f.radio_button :addresses_number, "1" %>
  <%= f.label :addresses_number_1, "ご自身の住所" %>
    <%= current_customer.post_code %>
    <%= current_customer.address %>
    <%= current_customer.last_name %>
    <%= current_customer.first_name %>
  
  <%= f.radio_button :addresses_number, "2" %>
  <%= f.label :addresses_number_2, "登録済み住所から選択" %>
    <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
  
  <%= f.radio_button :addresses_number, "3" %>
  <%= f.label :addresses_number_3, "新しいお届け先" %>
     <%= f.label :post_code, "郵便番号（ハイフンなし）" %>
    <%= f.text_field :post_code %>
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %>
    <%= f.label :name, "宛名" %>
    <%= f.text_field :name %>

  <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
<% end %>