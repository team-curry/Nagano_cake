<div class="container">
 <div class="text-center">
  <h4 class="bg-light col-4 mt-5">ジャンル編集</h4>
  <div class="row mt-5">
   <h6 class="col-md-2">ジャンル名</h6>
   <div class="col-md-7">
    <%= form_with model: @genre, url:admins_genre_path(@genre.id), method: :patch do |f| %>
    <div class="row">
     <div class="col-md-4">
     <%= f.text_field :name %>
     </div>
     <div class="col-md-5">
     <%= f.submit '変更を保存', class: "btn btn-success" %>
     </div>
    </div>
    <% end %>
   </div>
  </div>
 </div>
</div>