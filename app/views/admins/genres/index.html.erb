<div class="container">
 <div class="row d-flex flex-column bd-highlight mb-3">
  <h5 class="col-4 text-center mt-5 bg-light">ジャンル一覧・追加</h5>
  <% if @genre.errors.any? %>
   <%= @genre.errors.count %>件のエラーが発生しました
   <ul>
     <% @genre.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
   </ul>
  <% end %>
  <div class="text-center mt-5">
   <div class="row">
    <h6 class="col-md-2">ジャンル名</h6>
    <div class="col-md-7">
      <%= form_with model: @genre, url:admins_genres_path do |f| %>
      <div class="row">
       <div class="col-md-4">
        <%= f.text_field :name %>
       </div>
       <div class="col-md-4">
        <%= f.submit '新規登録', class: "btn btn-success" %>
       </div>
      </div>
      <% end %>
     </div>
   </div>
  </div>
  
  <div class="row">
  <div class="mt-2 col-4">
   <table class='table'>
    <thead class="thead-light">
    <tr>
     <th class="text-center">ジャンル</th>
     <th></th>
    </tr>
    </thead>
    <tbody>
    <% @genres.each do |genre| %>
     <tr>
      <td><%= genre.name %></td>
      <td class="text-right"><%= link_to "編集する", edit_admins_genre_path(genre.id),class: "btn btn-success ml-auto" %></td>
     </tr>
    <% end %>
    </tbody>
   </table>
  </div>
  </div>
 </div>
</div>