<div class="container">
  <div class="row d-flex flex-column bd-highlight mb-3">
    <h5 class="col-3 text-center mt-5 bg-light"><%= @customer.full_name %>さんの会員詳細</h5>
    <div class="text-left mt-4">
      <div class="row">
        <p class="col-md-3">会員ID</p>
        <div class="col-md-7">
          <div class="row">
            <div class="col-md-4">
              <%= @customer.id %>
            </div>
          </div>
        </div>
        <p class="col-md-3">氏名</p>
        <div class="col-md-7">
          <div class="row">
            <div class="col-md-4">
              <%= @customer.last_name %>　<%= @customer.first_name %>
            </div>
          </div>
        </div>
        <p class="col-md-3">フリガナ</p>
        <div class="col-md-7">
          <div class="row">
            <div class="col-md-4">
              <%= @customer.last_name_kana %>　<%= @customer.first__name_kana %>
            </div>
          </div>
        </div>
        <p class="col-md-3">郵便番号</p>
        <div class="col-md-7">
          <div class="row">
            <div class="col-md-4">
              <%= @customer.post_code %>
            </div>
          </div>
        </div>
        <p class="col-md-3">住所</p>
        <div class="col-md-7">
          <div class="row">
            <div class="col-md-4">
              <%= @customer.address %>
            </div>
          </div>
        </div>
        <p class="col-md-3">電話番号</p>
        <div class="col-md-7">
          <div class="row">
            <div class="col-md-4">
              <%= @customer.phone_number %>
            </div>
          </div>
        </div>
        <p class="col-md-3">メールアドレス</p>
        <div class="col-md-7">
          <div class="row">
            <div class="col-md-4">
              <%= @customer.email %>
            </div>
          </div>
        </div>
        <p class="col-md-3">会員ステータス</p>
        <div class="col-md-7">
          <div class="row">
            <div class="col-md-4">
              <% if @customer.is_deleted == false %>
               <p class="text-success">有効</p>
              <% else %>
               <p class="text-secondary">退会</p>
              <% end %>
            </div>
          </div>
        </div>
        <div class="">
          <div class="">
            <div class="row mx-auto">
                <%= link_to "編集する", edit_admins_customer_path, class: "btn btn-sm btn-success border rounded mr-5" %>
              
                <%= link_to "注文履歴一覧を見る", admins_path, class: "btn btn-sm btn-info border rounded" %>
             
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>