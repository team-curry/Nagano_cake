<div class="container">
  <div class="row d-flex flex-column bd-highlight mb-3">
    <h5 class="col-4 text-center mt-5 bg-light">会員一覧</h5>
    <div class="row">
      <div class="col-8 mx-auto">
        <table class="table">
          <thead>
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <% @customers.each do |customer| %>
          <tbody>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.name %></td>
              <td><%= customer.email %></td>
              <td>
                <% if @customer.is_deleted == false %>
                 <p class="text-success">有効</p>
                <% else %>
                 <p class="text-secondary">退会</p>
                <% end %>
              </td>
            </tr>
          </tbody>
          <% end %>
        </table>
        <%= paginate @customers %>
      </div>
    </div>
  </div>
</div>