<div class="container">
 <h5 class="mt-3 ml-5 col-3 text-center bg-light">商品詳細</h5>
  <div class="row mt-5 d-flex bd-highlight">
   <div class="p-1 flex-fill bd-highlight">
    <div class="text-center">
    <% if @sweet.image.attached? %>
      <%= image_tag @sweet.image, size: "200x200" %>
    <% else %>
      <%= image_tag 'no_image', size: "200x200" %>
    <% end %>
    </div>
   </div>

   <div class=" p-1 flex-fill bd-highlight">
     <div class="row">
      <h6 class="col-4">商品名</h6>
      <div class="col-8">
       <p><%= @sweet.name %></p>
      </div>
     </div>

     <div class="row">
      <h6 class="col-4">商品説明</h6>
      <div class="col-8">
       <p><%= @sweet.explanation %></p>
      </div>
     </div>

     <div class="row">
      <h6 class="col-4">ジャンル</h6>
      <div class="col-8">
       <p><%= @genre.name %></p>
      </div>
     </div>

     <div class="row">
      <h6 class="col-4">税込価格</br>(税抜価格)</h6>
      <div class="col-8">
       <p><%= @sweet.add_tax_price.to_s(:dalimited) %>(<%= @sweet.price %>)円</p>
      </div>
     </div>

     <div class="row w-100">
      <h6 class="col-4">販売ステータス</h6>
      <div class="col-8">
        <% if @sweet.is_sale_status == true %>
         <p class="text-success">販売中</p>
        <% else %>
         <p class="text-secondary">販売停止中</p>
        <% end %>
      </div>
     </div>
     <div class="mt-5">
      <%= link_to "編集する", edit_admins_sweet_path(@sweet.id), class: "btn btn-success" %>
     </div>
   </div>
  </div>
</div>