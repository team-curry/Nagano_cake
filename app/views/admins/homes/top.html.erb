<div class="mx-auto mt-3" style="width:70%;">
 <h5>注文履歴一覧</h5>

  <table class="table">
    <thead>
      <tr class="table-secondary">
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
     <% @orders.each do |order| %>
    <tbody>
      <tr>
        <td>
          <%= link_to admins_order_path(order.id) do %>
              <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
          <% end %>
        <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
        <td><%= order.order_details.sum(:quantity) %></td>
        <td><%= order.status_i18n %></td>
      </tr>
    </tbody>
     <% end %>
  </table>

  <%= paginate @orders %>

</div>