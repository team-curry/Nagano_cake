<div class="mx-auto mt-3" style="width:80%;">
 <h5>注文履歴一覧</h5>

  <table class="table">
    <thead>
      <tr class="table-secondary">
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
     <% @order.each do |order| %>
    <tbody>
      <tr>
        <td><%= link_to l order.created_at,order, class: "order_#{order.id}" %></td>
        <td><%= order.customer.last_name %><%= order.customer._name %></td>
        <td><%= order.quantity.all.sum %></td>
        <td><%= order.status %></td>
      </tr>
    </tbody>
     <% end %>
  </table>
  
  <%= paginate @order %>

</div>